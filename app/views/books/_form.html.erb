<%= form_for @book do |f| %>
  <ul>
    <li>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </li>

    <li>
      <%= f.label :author %>
      <%= f.text_field :author %>
    </li>

    <li>
      <%= f.label :rating %>
      <%= f.select(:rating, ['very good', 'good','bad','very bad']) %>
    </li>

    <li>
      <%= f.label :published_at %>
      <%= f.text_field :published_at %>
    </li>

    <li>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </li>

    <li>
      <%= f.submit "Submit" %>
    </li>    
  </ul>

<% end %>
